<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/AbsenteesListItem_imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/AbsenteesListItem_NameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/AbsenteesListItem_imageView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/AbsenteesListItem_imageView"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/AbsenteesListItem_DepartmentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/AbsenteesListItem_imageView"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_alignTop="@+id/AbsenteesListItem_imageView"
        android:text="Name"
        android:textSize="20sp"/>

</RelativeLayout>