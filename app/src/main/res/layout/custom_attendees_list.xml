<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/AttendeesListItem_imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/AttendeesListItem_NameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/AttendeesListItem_imageView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/AttendeesListItem_imageView"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/AttendeesListItem_loginTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/AttendeesListItem_imageView"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:layout_alignTop="@+id/AttendeesListItem_imageView"
        android:text="Login Time"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/AttendeesListItem_signOutTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/AttendeesListItem_imageView"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp"
        android:layout_alignTop="@+id/AttendeesListItem_imageView"
        android:text="Sign out Time"
        android:textSize="20sp"/>

</RelativeLayout>